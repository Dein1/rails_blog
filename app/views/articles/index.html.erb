<h1><%= t(:index_header) %></h1>
<%= link_to t(:new_article), new_article_path %>
<table>
  <tr>
    <th><%= t(:title) %></th>
    <th><%= t(:text) %></th>
    <th><i><%= t(:author) %></i></th>
    <th><i><%= t(:status) %></i></th>
    <th colspan="4"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><i><%= article.author_name %></i></td>
      <td><i><%= article.state %></i></td>
      <td><%= link_to t(:show), article_path(article) %></td>
      <td><%= link_to t(:edit), edit_article_path(article) %></td>
      <td><%= link_to t(:destroy), article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>